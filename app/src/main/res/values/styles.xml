<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar. -->
        <item name="colorPrimary">#9E9D24</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#827717</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#1B5E20</item>
    </style>

    <!-- Style for a main headline TextView -->
    <style name= "mainHead" >
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">cursive</item>
    </style>


    <!-- Style for a question TextView -->
    <style name= "QuestionTextStyle" >
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1B5E20</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <!-- Style for a answer TextView -->
    <style name= "AnswerTextStyle" >
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!-- Style for Radio group -->
    <style name= "radioGroup" >
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

</resources>
